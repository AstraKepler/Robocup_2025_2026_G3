<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <set_env name="GZ_SIM_RESOURCE_PATH" value="$(find-pkg-share mam_eurobot_2026)" />
  <arg name="world_sdf_file" default="$(find-pkg-share mam_eurobot_2026)/worlds/arena_world.sdf" />
  <executable
    cmd="ign gazebo -r $(var world_sdf_file)"
    output="screen">
  </executable>
  <executable
    cmd="ros2 run ros_gz_sim create -file file://models/crate -name crate -x -0.20 -y 0 -z 0.05"
    output="screen"/>
  <executable
  cmd="ros2 run ros_gz_sim create -file file://models/simple_robot -name simple_robot -x 0.05 -y 0 -z 0.05 -Y 3.1415"
  output="screen"/>
  <node
    pkg="ros_gz_bridge" exec="parameter_bridge" name="cmd_vel_bridge" output="screen"
    args="/cmd_vel@geometry_msgs/msg/Twist@gz.msgs.Twist"/>
  <node pkg="rviz2" exec="rviz2" name="rviz2" output="screen"/>
</launch>